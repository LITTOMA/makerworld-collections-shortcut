{
  "manifest_version": 2,
  "name": "MakerWorld Collection Shortcut",
  "version": "1.0.0",
  "description": "Add a collection shortcut button in the MakerWorld navigation bar",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://makerworld.com/*",
        "https://*.makerworld.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://makerworld.com/*",
    "https://*.makerworld.com/*"
  ],
  "web_accessible_resources": [
    "icons/*.png"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "makerworld-quickfav@extension.local",
      "strict_min_version": "57.0"
    }
  }
}

